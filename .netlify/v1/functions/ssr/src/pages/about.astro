---
import BaseLayout from "../layouts/BaseLayout.astro";

const pageTitle = "About Me";
const redacted = "REDACTED";
const identity = {
	fullname: "Lautaro Javier Fernandez Pricco",
	nickname: "Lauta",
	pronouns: "he/him",
	location: "Barcelona, Spain",
	occupation: "Software Engineer",
	hobbies: ["board games", "coding", "cooking", "traveling", "video games"],
};
const skills = ["C++", "CSS", "HTML", "JavaScript", "Linux", "Python"];

// Testing conditional rendering of HTML elements.
const happy = true;
const finished = true;
const goal = 5;

const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";
---

<BaseLayout pageTitle={pageTitle}>
	<style define:vars={{ skillColor, fontWeight, textCase }}>
		.skill {
			color: var(--skillColor);
			font-weight: var(--fontWeight);
			text-transform: var(--textCase);
		}
	</style>

	<h2>and the blog.</h2>

	<p>Here are some things about me:</p>
	<ul>
		<li>My name is: {redacted} but people call me {identity.nickname}</li>
		<li>
			I live in: {identity.location} and I work as a: {identity.occupation}
		</li>
		{
			identity.hobbies.length >= 2 && (
				<li>
					Some of my hobbies include: {identity.hobbies[0]} and {identity.hobbies[1]}
				</li>
			)
		}
	</ul>

	<p>Some of my skills are:</p>
	<ul>
		{skills.map((skill) => <li class="skill">{skill}</li>)}
	</ul>
	{happy && <p>I am happy to be finally making progress with my blog!</p>}
	{finished && <p>I finished designing this blog!</p>}
	{goal === 5 ? <p>My goal is to finish in 5 days.</p> : <p>I don't actually have a deadline.</p>}
</BaseLayout>
